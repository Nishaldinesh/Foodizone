<script>
   
function addToCart(proId,vendorId){
    $.ajax({
        url: '/add-to-cart',
        data:{
            proId:proId,
            vendorId:vendorId
        },
        method: 'post',
        success:(response)=>{
           if(response.status){
            let count=$('#cart-count').html()
            count=parseInt(count)+1
            $("#cart-count").html(count)
           }else if(response.venExist){
            alert("Hello working");
           }
        }
    })
}
</script>