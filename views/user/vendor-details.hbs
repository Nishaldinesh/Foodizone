   .ven-header {
      background-color: #282c3f;
      height: 230px;
      margin-bottom: 27rem;
   }

   .text-lg {
      font-family: ProximaNova, arial, Helvetica Neue, sans-serif;
   }

   .contents {
      padding-left: 44rem;
      margin-top: -11rem;
      position: absolute;
   }

   .shop-img {
      padding-left: 25rem;
      padding-top: 5rem;
      height: 15rem;
      margin-top: -3rem;
      width: 41rem;
   }

   .product-container {
      margin-top: 23rem;
   }

   .products-card {
      width: 42rem;
   }

   .h-200 {
      background-color: #ffff;
      height: auto;
   }

   .container {
      box-shadow: none;
   }

   .card {
      box-shadow: none;
   }
   .btn{
      font-size: xx-large;
      box-shadow: none;
   }
</style>